{% extends 'base.html.twig' %}

{% block title %}WSM Backend Test {% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <main>
        <section>
            <div class="container mt-5 mb-2">
                <div class="row">
                    <div class="col-12">
                        <h1>Hello ReportsController</h2>
                        <p>Please enter the Account ID you'd like to display</p>
                    </div>
                </div>
            </div>
            
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <form>
                            <div class="mb-3">
                                <input type="text" class="form-control" name="accountid" id="accountid" placeholder="Account ID">
                            </div>
                            <a class="btn btn-primary">Get Data</a>
                            <a class="btn btn-primary">Show All</a>
                        </form>
                    </div>
                    <div class="col-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Account Name</th>
                                    <th scope="col">Account ID</th>
                                    <th scope="col">Spend</th>
                                    <th scope="col">Clicks</th>
                                    <th scope="col">Impressions</th>
                                    <th scope="col">Cost per Click</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>*</td>
                                    <td>*</td>
                                    <td>*</td>
                                    <td>*</td>
                                    <td>*</td>
                                    <td>*</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}